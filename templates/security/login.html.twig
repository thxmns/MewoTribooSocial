<div class="container">
  <main class="signup-container">
    <h1 class="heading-primary">Log in<span class="span-blue">.</span></h1>
    {% if app.user %}
    <p class="text-mute" style="font-weight:700;">You are already logged in as {{ app.user.userIdentifier }} ! You can logout :)</p>
          {% else %}
              <p class="text-mute">Welcome to the PIRADMIN ! Log in to manage your site :)</p>

                 {% endif %}


    <div class="login-wrapper">
      
      <div class="line-breaker">
        <span class="line"></span>
      </div>
    </div>

    <form method="post" class="signup-form">
      <label class="inp">
     

    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input-text" autocomplete="email" required autofocus>

       
        <span class="label">Email</span>
        <span class="input-icon"><i class="fa-solid fa-envelope"></i></span>
      </label>
      <label class="inp">
          <input type="password" name="password" id="password" class="input-text" autocomplete="current-password" placeholder="&nbsp;" required>

        <span class="label">Password</span>

        <span  type="password" name="password" id="inputPassword"  autocomplete="current-password" required class="input-icon input-icon-password" data-password><i class="fa-solid fa-eye"></i></span>
      </label>
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
        {% if app.user %}
                <button style="text-decoration:none;color:white" class="btn btn-login"><a style="text-decoration:none;color:white" href="{{ path('app_logout') }}">Logout</a></button>

      {% else %}
      <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
      <button class="btn btn-login">Login</button>

       {% endif %}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    </form>
    <p class="text-mute" style="font-size: 10px;">Piranha et petits poissons rouges ¬© 2024</p>
  </main>
  <div class="welcome-container" >
   

  </div>
</div>

