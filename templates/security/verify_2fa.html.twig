{# verify_2fa.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Verify 2FA Code</title>
</head>
<body>
    <h1>Verify 2FA Code</h1>
    
    {% if error %}
        <div style="color: red;">{{ error }}</div>
    {% endif %}

    <form method="post" action="{{ path('app_2fa_verify') }}">
        <label for="2fa_code">Enter your 2FA code:</label>
        <input type="text" name="_2fa_code" required>
        <button type="submit">Verify</button>
    </form>
</body>
</html>
